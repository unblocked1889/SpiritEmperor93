<?xml version="1.0" encoding="utf-8"?>
<Module>
  <ModulePrefs title="My Ruffle App">
    <Require feature="http://ns.adobe.com/air/sandbox/1.0"/>
    <Require feature="ruffle" src="https://cdn.jsdelivr.net/npm/@rufflejs/ruffle@latest/dist/ruffle.js"/>
  </ModulePrefs>
  <Content><![CDATA[
    <h1>Hello, Ruffle!</h1>
    <div id="my-swf"></div>
    <script>
      const player = RufflePlayer.create(document.getElementById("my-swf"), {
        // Cấu hình tùy chọn của Ruffle
        backgroundColor: "#ffffff", // Màu nền cho tệp SWF
        frameRate: 60, // Tốc độ khung hình của tệp SWF
        scaleFactor: "showall", // Tùy chọn độ phóng to thu nhỏ của tệp SWF
        autoplay: true, // Tự động phát lại tệp SWF khi trang web được tải lên
        loop: false, // Tự động lặp lại tệp SWF khi nó kết thúc
        onfinish: () => { /* Xử lý sự kiện khi tệp SWF kết thúc */ },
        onready: () => { /* Xử lý sự kiện khi tệp SWF đã sẵn sàng để phát lại */ },
        onerror: (error) => { /* Xử lý lỗi khi phát lại tệp SWF */ },
        // và nhiều tùy chọn khác
      });
      player.load("my-swf.swf");
    </script>
  ]]></Content>
</Module>